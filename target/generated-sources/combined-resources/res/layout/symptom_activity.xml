<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.microsoft.hsg.android.jc.SymptomActivity" >

    <TextView
        android:id="@+id/painLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pain_label" />

    <SeekBar
        android:id="@+id/painSeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <TextView
        android:id="@+id/painValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nauseaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nausea_label" />

    <SeekBar
        android:id="@+id/nauseaSeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <TextView
        android:id="@+id/nauseaValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/constipationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/constipation_label" />

    <SeekBar
        android:id="@+id/constipationSeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <TextView
        android:id="@+id/constipationValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fatigueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fatigue_label" />

    <SeekBar
        android:id="@+id/fatigueSeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <TextView
        android:id="@+id/fatigueValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sleepLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sleep_label" />

    <SeekBar
        android:id="@+id/sleepSeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <TextView
        android:id="@+id/sleepValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/putThing"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight=".2"
        android:text="Save" >
    </Button>

</LinearLayout>